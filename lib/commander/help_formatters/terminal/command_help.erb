
  <%= color "NAME", :bold %>:

    <%= @name %>

  <%= color "DESCRIPTION", :bold %>:

    <%= @description || @summary || 'No description.' -%>

<% if @syntax -%>

  <%= color "SYNOPSIS", :bold %>:

    <%= @syntax -%>

<% end -%>
<% unless @examples.empty? -%>

  <%= color "EXAMPLES", :bold %>:
	<% @examples.each do |example| -%>

    # <%= example[:description] %>
    <%= example[:command] %>
	<% end -%>
<% end -%>
<% unless @options.empty? -%>

  <%= color "OPTIONS", :bold %>:
	<% @options.each do |option| -%>

    <%= option[:switches].join ', ' %> 
        <%= option[:description] %>
	<% end -%>
<% end -%>

